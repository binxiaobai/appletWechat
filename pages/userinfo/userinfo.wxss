.box {
   font-size: 16px;
}
.header {
   width: 100%;
   height: 80px;
   line-height: 80px;
   border-bottom: 1px solid #dcdcdc;
   margin-bottom: 10px;
}
.header text {
   float: left;
   margin-left: 10px;
}
.header image {
   float: right;
   margin-right: 10px;
   width: 50px;
   height: 50px;
   margin-top: 15px;
}
.item {
   height: 50px;
   width: 100%;
   line-height: 50px;
   border-bottom: 1px solid #dcdcdc;
}
.item text {
   float: left;
   margin-left: 10px;
}
.item .right {
   margin-right: 10px;
   color: #b3afaf;
   font-size: 16px;
   float:right;
}
.item .right1 {
   float:right;
   margin-right: 10px;
   color: #b3afaf;
   font-size: 16px;
   width: 60%;
   overflow: hidden;
   text-overflow: ellipsis;
   white-space: nowrap;
}
.textbox {
   height: 100%;
   width: 100%;
   position: absolute;
   top:0;
   left: 0;
   background-color: rgba(0, 0, 0, .3);
}
.text {
   position: absolute;
   bottom:0;
   left: 0;
   height: 50%;
   width: 100%; 
   background-color: white;
}
