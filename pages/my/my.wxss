.my {
   width: 100%;
   overflow: hidden;
}
.myheader {
   width: 100%;
   height: 80px;
   border:1px solid #dcdcdc;
   overflow: hidden;
   margin-bottom: 50px;
}
.myheader .myimage {
   width: 70px;
   height: 70px;
   float: left;
   margin: 5px;
   line-height: 80px;
}
.myimage image {
    width: 70px;
   height: 70px;
   border-radius: 70px;
}
.myheader .myname {
   height: 100px;
   float: left;
}
.myname .name {
   font-size: 20px;
   padding: 5px;
   margin-top: 10px;
}
.myname .myinfo {
   font-size: 12px;
   color: #cccc;
}
.mylist {
   width: 100%;
   height: 50px;
   line-height: 50px;
    border:1px solid #dcdcdc;
}
.top {
    border:1px solid #dcdcdc;
}
.mylist .listimg {
   float: left;
   margin-left: 10px;
}
.listimg image {
   width: 30px;
   height: 30px;
   margin-top: 10px;
   float: left;
}
.mylist .listinfo {
   float: left;
   padding-left: 15px;
   font-size: 16px;
}
