.type {
   width: 100%;
   padding-bottom: 3px;
   margin-top: 35px;
   border-bottom: 1px solid #dcdcdc;
   height: 150px;
   overflow: hidden;
}
.typeImg {
   width: 30%;
   height: 140px;
   float: left;
   margin: 5px;
}
.typeImg image {
    width: 100%;
   height: 140px;
   box-shadow: 1px 2px 3px #dcdcdc;
}
.typeInfo {
   margin: 5px;
   position: relative;
   height: 150px;
   width: 100%;
}
.bookName {
   font-size: 20px;
   color: red;
   margin-bottom: 5px;
}
.bookAbout {
   font-size: 14px;
   height: 80px;
   overflow: hidden;
   text-overflow: ellipsis;
}
.bookWriter {
   position: absolute;
   bottom: 5px;
   left:32%;
   font-size: 12px;
   width: 100%;
}
.writeName {
   display: inline-block;
   font-size: 14px;
   color: #882727
}
.renew {
   display: inline-block;
   margin-left: 30px;
}
.drec {
   display: inline-block;
   margin-right: 40px;
   padding: 2px 4px;
   border: 1px dashed #dcdcdc;
}
.renum {
   display: inline-block;
   padding: 2px 4px;
   border: 1px solid #4686cf;
   color: palevioletred;
}